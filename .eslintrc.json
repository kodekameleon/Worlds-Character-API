{
  "env": {
    "node": true,
    "es6": true
  },
  "extends": [
    "eslint:recommended"
  ],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "plugins": [
  ],
  "rules": {
    "guard-for-in" : 0,
    "indent": [
      "error",
      2
    ],
    "linebreak-style": [
      "error",
      "unix"
    ],
    "quotes": [
      "error",
      "double"
    ],
    "semi": [
      "error",
      "always"
    ],
    "no-var": "error",
    "prefer-const": "error",
    "no-prototype-builtins": 0,
    "sort-imports": ["error", {
      "ignoreCase": true,
      "memberSyntaxSortOrder": ["single", "multiple", "all", "none"]
    }]
  }
}
